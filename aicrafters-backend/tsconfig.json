{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
} 